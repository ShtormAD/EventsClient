<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialogEtName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="8dp" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:hint="Название"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="173dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/dialogEtDesc"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtName"
            app:layout_constraintStart_toStartOf="@+id/dialogEtName" android:layout_marginTop="7dp"
            android:hint="Описание"/>
    <Button
            android:text="Отмена"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dialogBtnCancel"
            app:layout_constraintStart_toStartOf="@+id/dialogEtDesc"
            android:paddingBottom="8dp" android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtTimeEnd" android:layout_marginTop="14dp"/>
    <Button
            android:text="Создать"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dialogBtnAccept"
            app:layout_constraintEnd_toEndOf="@+id/dialogEtDesc"
            android:layout_marginEnd="4dp" app:layout_constraintTop_toBottomOf="@+id/dialogEtTimeEnd"
            android:layout_marginTop="14dp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dialogEtDateStart"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtDesc"
            android:layout_marginTop="14dp"
            android:enabled="false" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="63dp"/>
    <TextView
            android:text="начала:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/dialogEtDateStart"
            app:layout_constraintBottom_toBottomOf="@+id/dialogEtDateStart"
            app:layout_constraintTop_toTopOf="@+id/dialogEtDateStart" android:textSize="16sp"
            android:textColor="@color/design_default_color_on_secondary" android:layout_marginEnd="7dp"
    />
    <TextView
            android:text="начала:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textSize="16sp"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintEnd_toStartOf="@+id/dialogEtTimeStart"
            app:layout_constraintTop_toTopOf="@+id/dialogEtTimeStart"
            app:layout_constraintBottom_toBottomOf="@+id/dialogEtTimeStart" android:layout_marginEnd="7dp"/>
    <TextView
            android:text="Дата"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/dialogEtDesc"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtDesc" android:textSize="16sp"
            android:textColor="@color/design_default_color_on_secondary"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dialogEtDateEnd"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtDateStart"
            app:layout_constraintStart_toStartOf="@+id/dialogEtDateStart" android:layout_marginTop="4dp"
            android:enabled="false"/>
    <TextView
            android:text="окончания:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="16sp"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintEnd_toStartOf="@+id/dialogEtDateEnd"
            app:layout_constraintTop_toTopOf="@+id/dialogEtDateEnd"
            app:layout_constraintBottom_toBottomOf="@+id/dialogEtDateEnd" android:layout_marginEnd="7dp"/>
    <TextView
            android:text="окончания:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textSize="16sp"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintTop_toTopOf="@+id/dialogEtTimeEnd"
            app:layout_constraintBottom_toBottomOf="@+id/dialogEtTimeEnd"
            app:layout_constraintEnd_toStartOf="@+id/dialogEtTimeEnd" android:layout_marginEnd="7dp"/>
    <TextView
            android:text="Время"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="14dp" android:textColor="@color/design_default_color_on_secondary"
            android:textSize="16sp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/dialogEtTimeStart"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtDateEnd"
            app:layout_constraintStart_toStartOf="@+id/dialogEtDateEnd"
            app:layout_constraintEnd_toEndOf="@+id/dialogEtDateEnd" android:layout_marginTop="20dp"
            android:enabled="false"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/dialogEtTimeEnd"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtTimeStart" app:layout_constraintEnd_toEndOf="@+id/dialogEtTimeStart"
            android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="@+id/dialogEtTimeStart"
            android:enabled="false"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@android:drawable/ic_menu_month"
            android:id="@+id/dialogBtnDateStart"
            android:background="#FFFFFF" app:layout_constraintStart_toEndOf="@+id/dialogEtDateStart"
            app:layout_constraintTop_toTopOf="@+id/dialogEtDateStart"
            app:layout_constraintBottom_toBottomOf="@+id/dialogEtDateStart" android:layout_marginStart="3dp"
            android:tint="@color/purple_700"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@android:drawable/ic_menu_month"
            android:id="@+id/dialogBtnDateEnd"
            android:background="#FFFFFF"
            android:tint="@color/purple_700"
            app:layout_constraintStart_toEndOf="@+id/dialogEtDateEnd"
            android:layout_marginStart="3dp" app:layout_constraintBottom_toBottomOf="@+id/dialogEtDateEnd"
            app:layout_constraintTop_toTopOf="@+id/dialogEtDateEnd"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@android:drawable/ic_menu_recent_history"
            android:id="@+id/dialogBtnTimeStart"
            app:layout_constraintStart_toEndOf="@+id/dialogEtTimeStart"
            app:layout_constraintTop_toTopOf="@+id/dialogEtTimeStart"
            app:layout_constraintBottom_toBottomOf="@+id/dialogEtTimeStart" android:layout_marginStart="3dp"
            android:background="#FFFFFF" android:tint="@color/purple_700"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@android:drawable/ic_menu_recent_history"
            android:id="@+id/dialogBtnTimeEnd"
            android:background="#FFFFFF" android:tint="@color/purple_700"
            app:layout_constraintBottom_toBottomOf="@+id/dialogEtTimeEnd"
            app:layout_constraintTop_toTopOf="@+id/dialogEtTimeEnd"
            app:layout_constraintStart_toEndOf="@+id/dialogEtTimeEnd" android:layout_marginStart="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>