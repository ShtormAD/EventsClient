<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialogEtName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="8dp" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:hint="Название"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="173dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/dialogEtDesc"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtName"
            app:layout_constraintStart_toStartOf="@+id/dialogEtName" android:layout_marginTop="7dp"
            android:hint="Описание"/>
    <Button
            android:text="Отмена"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dialogBtnCancel"
            app:layout_constraintStart_toStartOf="@+id/dialogEtDesc"
            app:layout_constraintTop_toBottomOf="@+id/dialogEtDesc" android:layout_marginTop="7dp"
            android:paddingBottom="8dp"/>
    <Button
            android:text="Создать"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dialogBtnAccept"
            app:layout_constraintTop_toTopOf="@+id/dialogBtnCancel"
            app:layout_constraintEnd_toEndOf="@+id/dialogEtDesc"/>
</androidx.constraintlayout.widget.ConstraintLayout>